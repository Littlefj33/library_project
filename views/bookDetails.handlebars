<div id="book-details">
  <h1>{{book.title}}</h1>
  {{#ifCond book.in_stock "gt" 0}}
  <form action="/borrow-book/{{book._id}}" method="POST">
    <button type="submit">Borrow Book</button>
  </form>
  {{else}}
  <p>Out of Stock!</p>
  {{/ifCond}}
  <p class="bookInfo">Author(s): {{join book.authors ", "}}</p>
  <p class="bookInfo">Genre: {{join book.genre ", "}}</p>
  <p class="bookInfo">Publication Date: {{book.publication_date}}</p>
  <p class="bookInfo">ISBN: {{book.isbn}}</p>
  <p class="bookInfo">Page Count: {{book.page_count}}</p>
  <p class="bookInfo">Language: {{book.language}}</p>
  <p class="bookInfo">In Stock: {{book.current_stock}}</p>
  <p class="bookInfo">Summary: {{book.summary}}</p>
  <h2>Reviews</h2>
  {{#each book.reviews}}
  <div class="review">
    <p>{{content}}</p>
  </div>
  {{/each}}
</div>