<div id="book-details">
    <h1>{{book.title}}</h1>
    {{#ifCond book.in_stock "gt" 0}}
    <form action="/borrow-book/{{book._id}}" method="POST">
        <button type="submit">Borrow Book</button>
    </form>
    {{else}}
    <p>Out of Stock!</p>
    {{/ifCond}}
    <p><strong>Author(s):</strong> {{join book.authors ", "}}</p>
    <p><strong>Genre:</strong> {{join book.genre ", "}}</p>
    <p><strong>Publication Date:</strong> {{book.publication_date}}</p>
    <p><strong>ISBN:</strong> {{book.isbn}}</p>
    <p><strong>Page Count:</strong> {{book.page_count}}</p>
    <p><strong>Language:</strong> {{book.language}}</p>
    <p><strong>In Stock:</strong> {{book.in_stock}}</p>
    <p><strong>Summary:</strong> {{book.summary}}</p>
    <h2>Reviews</h2>
    {{#each book.reviews}}
    <div class="review">
        <p>{{content}}</p>
    </div>
    {{/each}}
</div>