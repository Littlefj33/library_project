<h1>{{title}}</h1>
<form method="POST" action="/register" id="registration-form">
  <div class="div-padding">
    <label for="firstNameInput">First Name</label>
    <input
      type="text"
      id="firstNameInput"
      name="firstNameInput"
      placeholder="First Name Here"
    />
  </div>
  <div class="div-padding">
    <label for="lastNameInput">Last Name</label>
    <input
      type="text"
      id="lastNameInput"
      name="lastNameInput"
      placeholder="Last Name Here"
    />
  </div>
  <div class="div-padding">
    <label for="dobInput">Date of Birth</label>
    <input type="date" id="dobInput" name="dobInput" />
  </div>
  <div class="div-padding">
    <label for="phoneNumberInput">Phone Number</label>
    <input
      type="tel"
      id="phoneNumberInput"
      name="phoneNumberInput"
      placeholder="XXX-XXX-XXXX"
    />
  </div>
  <div class="div-padding">
    <label for="emailAddressInput">Email Address</label>
    <input
      type="email"
      id="emailAddressInput"
      name="emailAddressInput"
      placeholder="email address"
    />
  </div>
  <div class="div-padding">
    <label for="passwordInput">Password</label>
    <input
      type="password"
      id="passwordInput"
      name="passwordInput"
      placeholder="Password"
    />
  </div>
  <div class="div-padding">
    <label for="confirmPasswordInput">Retype Password</label>
    <input
      type="password"
      id="confirmPasswordInput"
      name="confirmPasswordInput"
      placeholder="retype password"
    />
  </div>
  <div class="div-padding">
    <label for="roleInput">Choose a role:</label>
    <select name="roleInput" id="roleInput">
      <option value="user">User</option>
      <option value="admin">Librarian</option>
    </select>
  </div>

  <div class="btnDiv">
    <button
      class="buttonSignup"
      type="submit"
      name="submitButton"
      id="submitButton"
    >
      Create Account
    </button>
  </div>
</form>

<p class="error" id="error">{{#if error}} {{error}} {{/if}}</p>

<a href="/login">Already have an account? Click here to log-in</a>
