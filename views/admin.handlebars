<h1>{{title}}</h1>

<!-- Returned Book Requests Section -->
<section>
    <h2>Returned Book Requests</h2>
    {{#each returnedBookRequests}}
    <div>
        <h3>User: {{this.user}} Email Address: {{this.emailAddress}}</h3>
        <ul>
            {{#each this.return_requests}}
            <li>
                <p>Book: {{this.title}}</p>
                <!-- Add a button or link to process the return for each book -->
                <form action="/admin/processReturn" method="POST">
                    <input type="hidden" name="bookId" value="{{this._id}}" />
                    <input type="hidden" name="requesterEmail" value="{{../emailAddress}}" />
                    <button type="submit">Process Return</button>
                </form>
            </li>
            {{/each}}
        </ul>
    </div>
    {{else}}
    <p>No returned book requests.</p>
    {{/each}}
</section>

