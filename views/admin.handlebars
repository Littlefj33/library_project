<!-- Search and Update Section -->
<section>
    <h2>Search and Update Book</h2>
    <form id="searchForm" action="/books/updateBook" method="POST">
        <label for="isbn">ISBN:</label>
        <input type="text" id="isbn" name="isbn" required>

        <label for="stock">Total Stock:</label>
        <input type="number" id="Tstock" name="Tstock" min="0">

        <label for="Astock">Available Stock:</label>
        <input type="number" id="Astock" name="Astock" min="0">

        <label for="quality">Quality:</label>
        <select id="quality" name="quality">
            <option value="good">Good</option>
            <option value="fair">Fair</option>
            <option value="bad">Bad</option>
        </select>

        <button type="submit">Update Book</button>
    </form>
</section>
