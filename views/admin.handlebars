<h1>{{title}}</h1>

<!-- Returned Book Requests Section -->
<section>
  <h2>Returned Book Requests</h2>
  {{#each returnedBookRequests}}
  <div>
    <h3>User: {{this.user}} Email Address: {{this.emailAddress}}</h3>
    <ul>
      {{#each this.return_requests}}
      <li>
        <p>Book: {{this.title}}</p>
        <!-- Add a button or link to process the return for each book -->
        <form action="/admin/processReturn" method="POST">
          <input type="hidden" name="bookId" value="{{this._id}}" />
          <input
            type="hidden"
            name="requesterEmail"
            value="{{../emailAddress}}"
          />
          <button type="submit">Process Return</button>
        </form>
      </li>
      {{/each}}
    </ul>
  </div>
  {{else}}
  <p>No returned book requests.</p>
  {{/each}}
</section>

<!-- Search and Update Section -->
<section>
  <h2>Search and Update Book</h2>
  <form id="searchForm" action="/books/updateBook" method="POST">
    <label for="isbn">ISBN:</label>
    <input type="text" id="isbn" name="isbn" required />

    <label for="stock">Inc Stock:</label>
    <input type="number" id="stock" name="stock" min="0" />

    <label for="quality">Quality:</label>
    <select id="quality" name="quality">
      <option value="good">Good</option>
      <option value="fair">Fair</option>
      <option value="bad">Bad</option>
    </select>

    <button type="submit">Update Book</button>
  </form>
</section>
