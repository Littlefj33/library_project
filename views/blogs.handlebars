<h1>{{title}}</h1>

<section class="blogs-section">
  {{!-- Search bar with filter dropdown --}}
  <form action="/blogs/search" method="GET" class="search-form">
    <input
      type="text"
      name="search"
      placeholder="Search blogs..."
      aria-label="Search blogs"
    />

    {{!-- Filter dropdown --}}
    <select name="filter" aria-label="Filter by">
      <option value="title">By Title</option>
      <option value="author">By Author</option>
    </select>

    <button type="submit">Search</button>
  </form>

  <a class="newBlogLink" id="newBlogLink" href="/blogs/create"
    >Create New Blog</a
  >

  {{#each data}}
  <article class="blog-list-item">
    <a class="toBlogDetails" href="/blogs/{{this._id}}">{{this.title}}</a>
    <p class="author">
      Author: {{this.author_info.firstName}} {{this.author_info.lastName}}
    </p>
    <p class="content">{{this.content}}</p>
    <p>{{this.comments.length}} comments</p>

    <p>
      <button class="openCommentForm" onclick="toggleForm()">
        Comment on Blog
      </button>
    </p>

    <div id="form-popup" class="form-popup">
      <form
        action="/blogs/{{this._id}}/comment"
        method="POST"
        id="comment-blog-form"
        class="form-container"
      >
        <h3>New Comment</h3>
        <label for="content">Content:</label>
        <textarea
          id="content"
          name="content"
          placeholder="content..."
          required
        ></textarea>
        <button type="submit" class="submitAndCloseComment">
          Submit Comment
        </button>
      </form>
    </div>
  </article>
  {{/each}}
</section>
