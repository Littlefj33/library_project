<h1>Create New Event</h1>

<form action="/create-event" method="POST" class="event-form">
    <label for="title">Event Title:</label>
    <input type="text" id="title" name="title">

    <label for="date_time">Date and Time:</label>
    <input type="datetime-local" id="date_time" name="date_time">

    <label for="address">Address:</label>
    <input type="text" id="address" name="address">

    <label for="state">State:</label>
    <input type="text" id="state" name="state" pattern="[A-Z]{2}">

    <label for="zip">Zip Code:</label>
    <input type="text" id="zip" name="zip" pattern="\d{5}">

    <label for="description">Description:</label>
    <textarea id="description" name="description"></textarea>

    <label for="attending_fee">Attending Fee ($):</label>
    <input type="number" id="attending_fee" name="attending_fee" min="0">

    <label for="capacity">Capacity:</label>
    <input type="number" id="capacity" name="capacity">

    <label for="age_limit">Age Limit:</label>
    <input type="number" id="age_limit" name="age_limit" min="0">

    <button type="submit">Create Event</button>
</form>