<h1>Create New Event</h1>

<form action="/events/create" method="POST" id="event-form">
  <div class="div-padding">
    <label for="title">Event Title:</label>
    <input
      type="text"
      id="title"
      name="title"
      placeholder="Event title..."
      required
    />
  </div>

  <div class="div-padding">
    <label for="date_time">Date and Time:</label>
    <input
      type="datetime-local"
      id="date_time"
      name="date_time"
      placeholder="Date/Time..."
      required
    />
  </div>

  <div class="div-padding">
    <label for="address">Address:</label>
    <input
      type="text"
      id="address"
      name="address"
      placeholder="Address.."
      required
    />
  </div>

  <div class="div-padding">
    <label for="state">State:</label>
    <input
      type="text"
      id="state"
      name="state"
      placeholder="State..."
      required
    />
  </div>

  <div class="div-padding">
    <label for="zip">Zip Code:</label>
    <input type="text" id="zip" name="zip" placeholder="Zip Code..." required />
  </div>

  <div class="div-padding">
    <label for="description">Description:</label>
    <textarea
      id="description"
      name="description"
      placeholder="Description..."
      required
    ></textarea>
  </div>

  <div class="div-padding">
    <label for="attending_fee">Attending Fee ($):</label>
    <input
      type="number"
      step="0.01"
      id="attending_fee"
      name="attending_fee"
      placeholder="Fee..."
      required
    />
  </div>

  <div class="div-padding">
    <label for="capacity">Capacity:</label>
    <input
      type="number"
      id="capacity"
      name="capacity"
      placeholder="Capacity..."
      required
    />
  </div>

  <div class="div-padding">
    <label for="age_limit">Age Limit:</label>
    <input
      type="number"
      id="age_limit"
      name="age_limit"
      placeholder="Age limit..."
      required
    />
  </div>

  <div class="btnDiv">
    <button type="submit">Create Event</button>
  </div>
</form>

<a id="backToEvents" href="/events">Back to Events</a>

<p class="error" id="error">{{#if error}} {{error}} {{/if}}</p>
