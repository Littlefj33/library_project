<h1>Create New Event</h1>

<form action="/events/create" method="POST" id="event-form">
  <label for="title">Event Title:</label>
  <input type="text" id="title" name="title" required />

  <label for="date_time">Date and Time:</label>
  <input type="datetime-local" id="date_time" name="date_time" required />

  <label for="address">Address:</label>
  <input type="text" id="address" name="address" required />

  <label for="state">State:</label>
  <input type="text" id="state" name="state" required />

  <label for="zip">Zip Code:</label>
  <input type="text" id="zip" name="zip" required />

  <label for="description">Description:</label>
  <textarea id="description" name="description" required></textarea>

  <label for="attending_fee">Attending Fee ($):</label>
  <input
    type="number"
    step="0.01"
    id="attending_fee"
    name="attending_fee"
    required
  />

  <label for="capacity">Capacity:</label>
  <input type="number" id="capacity" name="capacity" required />

  <label for="age_limit">Age Limit:</label>
  <input type="number" id="age_limit" name="age_limit" required />

  <button type="submit">Create Event</button>
</form>

<p class="error" id="error">{{#if error}} {{error}} {{/if}}</p>
